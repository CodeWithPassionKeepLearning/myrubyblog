
<h1 style="color:#ffffff"><%= @category.name %></h1>
<hr>

		<% if @posts.each do |post| %>
		<div class="post">
	
			<h2 class="title"><%= link_to post.title, post %></h2><hr>
			<div class="entry"><%= post.body %></div>
			<div class="byline">
								<p class="meta">May 01, 2012 Posted by <a href="#">Someone</a></p>
								<p class="links"><a href="post.html">Read More</a>&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;<a href="#" title="b0x w">Comments</a></p>
			</div>
			</div>
		<% end.empty? %>
		<div class="post">
			<p>Sorry, there are no posts in this category.</p>
		</div>
			
		<% end %>
		
			<%= link_to "Back to Categories", categories_path %>
		

